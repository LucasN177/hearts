@page "/"
@using Hearts.Models
@using Hearts.Models.Enums
@using Hearts.Services
@inject GameService GameService


<MudContainer MaxWidth="MaxWidth.False" Class="game-container">
    
    <!-- Spieltisch Mitte -->
    <div class="game-table">
        <div class="table-info">
            <!-- Punkteanzeige -->
                <MudPaper Elevation="3" Class="pa-3" Style="background: rgba(255,255,255,0.95); margin-bottom: 20px">
                    <MudText Typo="Typo.subtitle1" Style="font-weight: bold; margin-bottom: 8px;">Punkte</MudText>
                    @foreach (var player in GameService.Players)
                    {
                        <MudText Typo="Typo.body2" Style="display: flex; justify-content: space-between; gap: 16px;">
                            <span>@player.Name:</span>
                            <span style="font-weight: bold;">0</span>
                        </MudText>
                    }
                </MudPaper>
            <MudText Typo="Typo.body2" Style="opacity: 0.8;">Stich: @GameService.StichCount / 8</MudText>
        </div>
    </div>

    <!-- Gespielte Karten -->
    @if (GameService.Players[0].CurrentCard != null)
    {
    <div class="played-card-bottom">
        <div class="playing-card medium" style="pointer-events: none;">
            <span class="card-value @GetSuitColor(GameService.Players[0].CurrentCard!.Suit)">@GameService.Players[0].CurrentCard?.Value</span>
            <span class="card-suit @GetSuitColor(GameService.Players[0].CurrentCard!.Suit)">@GetSuitSymbol(GameService.Players[0].CurrentCard!.Suit)</span>
            <span class="card-value @GetSuitColor(GameService.Players[0].CurrentCard!.Suit)">@GameService.Players[0].CurrentCard!.Value</span>
        </div>
    </div>
    }
    
    @if (GameService.Players[1].CurrentCard  != null)
    {
        <div class="played-card-left">
            <div class="playing-card medium" style="pointer-events: none;">
                <span class="card-value @GetSuitColor(GameService.Players[1].CurrentCard!.Suit)">@GameService.Players[1].CurrentCard!.Value</span>
                <span class="card-suit @GetSuitColor(GameService.Players[1].CurrentCard!.Suit)">@GetSuitSymbol(GameService.Players[1].CurrentCard!.Suit)</span>
                <span class="card-value @GetSuitColor(GameService.Players[1].CurrentCard!.Suit)">@GameService.Players[1].CurrentCard!.Value</span>
            </div>
        </div>
    }
    
    @if (GameService.Players[2].CurrentCard != null)
    {
        <div class="played-card-top">
            <div class="playing-card medium" style="pointer-events: none;">
                <span class="card-value @GetSuitColor(GameService.Players[2].CurrentCard!.Suit)">@GameService.Players[2].CurrentCard!.Value</span>
                <span class="card-suit @GetSuitColor(GameService.Players[2].CurrentCard!.Suit)">@GetSuitSymbol(GameService.Players[2].CurrentCard!.Suit)</span>
                <span class="card-value @GetSuitColor(GameService.Players[2].CurrentCard!.Suit)">@GameService.Players[2].CurrentCard!.Value</span>
            </div>
        </div>
    }
    
    @if (GameService.Players[3].CurrentCard != null)
    {
        <div class="played-card-right">
            <div class="playing-card medium" style="pointer-events: none;">
                <span class="card-value @GetSuitColor(GameService.Players[3].CurrentCard!.Suit)">@GameService.Players[3].CurrentCard!.Value</span>
                <span class="card-suit @GetSuitColor(GameService.Players[3].CurrentCard!.Suit)">@GetSuitSymbol(GameService.Players[3].CurrentCard!.Suit)</span>
                <span class="card-value @GetSuitColor(GameService.Players[3].CurrentCard!.Suit)">@GameService.Players[3].CurrentCard!.Value</span>
            </div>
        </div>
    }

    <!-- Unterer Spieler (Spielbar) -->
    <div class="player-bottom">
        <div class="player-name">@GameService.Players[0].Name | Stiche: @GameService.Players[0].Stiche.Count | Punkte: @GameService.Players[0].Punkte</div>
        <div class="cards-container">
            @foreach (var card in GameService.Players[0].Cards)
            {
            <div class="playing-card @(GetCardSize("bottom")) @(_selectedCard?.Id == card.Id ? "selected" : "")"
                 @onclick="() => HandleCardClick(card)">
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
                <span class="card-suit @GetSuitColor(card.Suit)">@GetSuitSymbol(card.Suit)</span>
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
            </div>
            }
        </div>
    </div>

    <!-- Linker Spieler -->
    <div class="player-left">
        @if (GameService.Players[1].IsPlaying)
        {
            <MudPaper>
                <MudText Color="Color.Warning">Spielt aus!</MudText>
            </MudPaper>   
        }
        <div class="player-name">@GameService.Players[1].Name | Stiche: @GameService.Players[1].Stiche.Count | Punkte: @GameService.Players[1].Punkte</div>
        <MudSelect T="Difficulty" @bind-Value="_player2Difficulty">
            <MudSelectItem T="Difficulty" Value="Difficulty.Simple">Simple</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Easy">Easy (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Normal">Normal (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Hard">Hard (WIP)</MudSelectItem>
        </MudSelect>
        <div class="cards-container-vertical">
            @foreach (var card in GameService.Players[1].Cards)
            {
                <div class="playing-card small card-rotated-left" style="pointer-events: none;">
                    <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
                    <span class="card-suit @GetSuitColor(card.Suit)">@GetSuitSymbol(card.Suit)</span>
                    <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
                </div>
            }
        </div>
    </div>

    <!-- Oberer Spieler -->
    <div class="player-top">
        <div class="player-name">@GameService.Players[2].Name | Stiche: @GameService.Players[2].Stiche.Count | Punkte: @GameService.Players[2].Punkte</div>
        <MudSelect T="Difficulty" @bind-Value="_player3Difficulty">
            <MudSelectItem T="Difficulty" Value="Difficulty.Simple">Simple</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Easy">Easy (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Normal">Normal (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Hard">Hard (WIP)</MudSelectItem>
        </MudSelect>
        <div class="cards-container">
            @foreach (var card in GameService.Players[2].Cards)
            {
            <div class="playing-card @(GetCardSize("top")) card-rotated-180" style="pointer-events: none;">
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
                <span class="card-suit @GetSuitColor(card.Suit)">@GetSuitSymbol(card.Suit)</span>
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
            </div>
            }
        </div>
    </div>

    <!-- Rechter Spieler -->
    <div class="player-right">
        <div class="player-name">@GameService.Players[3].Name | Stiche: @GameService.Players[3].Stiche.Count | Punkte: @GameService.Players[3].Punkte</div>
        <MudSelect T="Difficulty" @bind-Value="_player4Difficulty">
            <MudSelectItem T="Difficulty" Value="Difficulty.Simple">Simple</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Easy">Easy (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Normal">Normal (WIP)</MudSelectItem>
            <MudSelectItem T="Difficulty" Value="Difficulty.Hard">Hard (WIP)</MudSelectItem>
        </MudSelect>
        <div class="cards-container-vertical">
            @foreach (var card in GameService.Players[3].Cards)
            {
            <div class="playing-card small card-rotated-right" style="pointer-events: none;">
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
                <span class="card-suit @GetSuitColor(card.Suit)">@GetSuitSymbol(card.Suit)</span>
                <span class="card-value @GetSuitColor(card.Suit)">@card.Value</span>
            </div>
            }
        </div>
    </div>
</MudContainer>

@code {
private Card? _selectedCard;
private TaskCompletionSource<Card>? _tcs;
private bool _playerTurnCompleted;
private bool _gameEnded;

private Difficulty _player2Difficulty = Difficulty.Simple;
private Difficulty _player3Difficulty = Difficulty.Simple;
private Difficulty _player4Difficulty = Difficulty.Simple;


protected override async Task OnInitializedAsync()
{
    GameService.Init();
    await StartRound();
}


private async Task HandleCardClick(Card card)
{
_selectedCard = card;
GameService.Players[0].CurrentCard = card;
GameService.Players[0].Cards.Remove(card);

if (_tcs is not null && !_tcs.Task.IsCompleted)
{
    _playerTurnCompleted = true;
    _tcs.SetResult(card);
}

await InvokeAsync(StateHasChanged);
}

private async Task StartRound()
{
    _playerTurnCompleted = false;
    if (GameService.PlayerToPlay == GameService.Players[0])
    {
        await YouStarted();
    }
    
    if (GameService.PlayerToPlay == GameService.Players[1])
    {
        await Player2Started();
    }
    
    if (GameService.PlayerToPlay == GameService.Players[2])
    {
        await Player3Started();
    }
    
    if (GameService.PlayerToPlay == GameService.Players[3])
    {
        await Player4Started();
    }

    _playerTurnCompleted = true;
}



#region PlayerStarted

private async Task YouStarted()
{
    GameService.CurrentStich = new Stich();
    var card = await WaitForPlayerCard();
    _selectedCard = card;
    GameService.CurrentStich.Cards.Add(card);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
        
    var card1 = await GameService.PlayCard(GameService.Players[1], _player2Difficulty);
    GameService.CurrentStich.Cards.Add(card1);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
        
    var card2 = await GameService.PlayCard(GameService.Players[2], _player3Difficulty);
    GameService.CurrentStich.Cards.Add(card2);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
        
    var card3 = await GameService.PlayCard(GameService.Players[3], _player4Difficulty);
    GameService.CurrentStich.Cards.Add(card3);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);

    GameService.CalculateStich(card);
        
    await Task.Delay(2000);

    foreach (var player in GameService.Players)
    {
        player.CurrentCard = null;
    }
    await InvokeAsync(StateHasChanged);
    await StartNewRound();
}

private async Task Player2Started()
{
    GameService.CurrentStich = new Stich();
    var card1 = await GameService.PlayCard(GameService.Players[1], _player2Difficulty);
    GameService.CurrentStich.Cards.Add(card1);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
    
    var card2 = await GameService.PlayCard(GameService.Players[2], _player3Difficulty);
    GameService.CurrentStich.Cards.Add(card2);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
        
    var card3 = await GameService.PlayCard(GameService.Players[3], _player4Difficulty);
    GameService.CurrentStich.Cards.Add(card3);
    await InvokeAsync(StateHasChanged);
    
    var card = await WaitForPlayerCard();
    _selectedCard = card;
    GameService.CurrentStich.Cards.Add(card);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);

    GameService.CalculateStich(card1);
        
    await Task.Delay(2000);

    foreach (var player in GameService.Players)
    {
        player.CurrentCard = null;
    }
    await InvokeAsync(StateHasChanged);
    await StartNewRound();
}

private async Task Player3Started()
{
    GameService.CurrentStich = new Stich();
    
    var card2 = await GameService.PlayCard(GameService.Players[2], _player3Difficulty);
    GameService.CurrentStich.Cards.Add(card2);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
        
    var card3 = await GameService.PlayCard(GameService.Players[3], _player4Difficulty);
    GameService.CurrentStich.Cards.Add(card3);
    await InvokeAsync(StateHasChanged);
    
    var card = await WaitForPlayerCard();
    _selectedCard = card;
    GameService.CurrentStich.Cards.Add(card);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
    
    var card1 = await GameService.PlayCard(GameService.Players[1], _player2Difficulty);
    GameService.CurrentStich.Cards.Add(card1);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);

    GameService.CalculateStich(card2);
        
    await Task.Delay(2000);

    foreach (var player in GameService.Players)
    {
        player.CurrentCard = null;
    }
    await InvokeAsync(StateHasChanged);
    await StartNewRound();   
}

private async Task Player4Started()
{
    GameService.CurrentStich = new Stich();
    
    var card3 = await GameService.PlayCard(GameService.Players[3], _player4Difficulty);
    GameService.CurrentStich.Cards.Add(card3);
    await InvokeAsync(StateHasChanged);
    
    var card = await WaitForPlayerCard();
    _selectedCard = card;
    GameService.CurrentStich.Cards.Add(card);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
    
    var card1 = await GameService.PlayCard(GameService.Players[1], _player2Difficulty);
    GameService.CurrentStich.Cards.Add(card1);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);
    
    var card2 = await GameService.PlayCard(GameService.Players[2], _player3Difficulty);
    GameService.CurrentStich.Cards.Add(card2);
    await InvokeAsync(StateHasChanged);
    await Task.Delay(1000);

    GameService.CalculateStich(card3);
        
    await Task.Delay(2000);

    foreach (var player in GameService.Players)
    {
        player.CurrentCard = null;
    }
    await InvokeAsync(StateHasChanged);
    await StartNewRound();
}

private async Task EndRound()
{
    //Todo: Hier Logik für Beenden der Runde!
    await GameService.EndRound();
}

#endregion

#region Helper

private string GetSuitSymbol(Suit suit)
{
    return suit switch
    {
        Suit.Hearts => "♥",
        Suit.Diamonds => "♦",
        Suit.Spades => "♠",
        Suit.Clubs=> "♣",
        _ => ""
    };
}

private string GetSuitColor(Suit suit)
{
    return suit switch
    {
        Suit.Hearts => "red-suit",
        Suit.Diamonds => "red-suit",
        Suit.Spades => "black-suit",
        Suit.Clubs => "black-suit",
        _ => ""
    };
}

private string GetCardSize(string position)
{
    return position switch
    {
        "bottom" => "medium",
        "top" => "small",
        "left" => "small",
        "right" => "small",
        _ => "medium"
    };
}

private async Task<Card> WaitForPlayerCard()
{
    _tcs = new TaskCompletionSource<Card>();
    return await _tcs.Task;
}

private async Task StartNewRound()
{
    if (GameService.StichCount > 7)
    {
        await EndRound();
        _gameEnded = true;
        //Dialog hier?
        await InvokeAsync(StateHasChanged);
    }
    else
    {
        await StartRound();   
    }
}

#endregion

}

